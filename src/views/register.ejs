<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/partials.css">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
</head>
<body>
    <!--BANNER-->
    <%- include('./partials/banner') %>
    <!--REGISTER FORM-->
    <section class="form_section">
        <form class="form" action="/user/register" method="POST">
            <h2>Formulario Registro</h2>

            <div>
                <ul class="tablaErrores"></ul>
            </div>
            
            <label for="name">Nombre</label>
            <input name="name" type="text" class="<%= locals.errors && errors.name ? 'invalidInput' : null %>" value="<%= locals.oldData ? oldData.name : '' %>">
            <% if (locals.errors && errors.name) { %>
                <div class="invalid">
                    <%= errors.name.msg %>
                </div>
            <% } %>

            <label for="email">Email</label>
            <input name="email" type="email" class="<%= locals.errors && errors.email ? 'invalidInput' : null %>" value="<%= locals.oldData ? oldData.email : '' %>">
            <% if (locals.errors && errors.email) { %>
                <div class="invalid"> 
                    <%= errors.email.msg %> 
                </div>
            <% } %>

            <label for="password">Contraseña</label>
            <input name="password" type="password" class="<%= locals.errors && errors.password ? 'invalidInput' : null %>" value="<%= locals.oldData ? oldData.password : '' %>">
            <% if (locals.errors && errors.password) { %>
                <div class="invalid">
                    <%= errors.password.msg %> 
                </div>
            <% } %>

            <label for="repassword">Repetir contraseña</label>
            <input name="repassword" type="password" class="<%= locals.errors && errors.repassword ? 'invalidInput' : null %>" value="<%= locals.oldData ? oldData.repassword : '' %>">
            <% if (locals.errors && errors.repassword) { %>
                <div class="invalid">
                    <%= errors.repassword.msg %> 
                </div>
            <% } %>

            <button type="submit">Registrarse</button>
        </form>
    </section>
    <!--FOOTER-->
    <%- include('./partials/footer') %>

    <script src="/js/validations.js"></script>
</body>
</html>